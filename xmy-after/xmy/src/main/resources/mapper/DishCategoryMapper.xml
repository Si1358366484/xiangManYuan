<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xmy.mapper.DishCategoryMapper">

    <resultMap id="DishCategoryResultMap" type="com.xmy.domain.entity.DishCategory">
        <id property="id" column="id"/>
        <result property="categoryName" column="category_name"/>
        <result property="categoryValue" column="category_value"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="dbstatus" column="dbstatus"/>
    </resultMap>
    <!--    通用查询sql-->
    <sql id="baseSelect">
        SELECT * from dish_category as dc where dc.dbstatus != 2
    </sql>
    <!--    通用过滤sql-->
    <sql id="whereClause">
        <if test="categoryName != null and categoryName != ''">and dc.category_name like CONCAT('%',#{categoryName},'%')</if>
        <if test="categoryValue != null and categoryValue != ''">and dc.category_value like CONCAT('%',#{categoryValue},'%')</if>
        <if test="dbstatus != null">and dc.dbstatus = #{dbstatus}</if>
    </sql>
    <sql id="orderClause">
        ORDER BY dc.update_time DESC, dc.create_time DESC
    </sql>
    <select id="getDishCategoryList" resultMap="DishCategoryResultMap">
        <include refid="baseSelect"/>
        <include refid="whereClause"/>
        <include refid="orderClause"/>
    </select>
    
    <!-- 批量逻辑删除dishCategory -->
    <update id="batchDeleteDishCategory">
        UPDATE dish_category
        SET dbstatus = 2
        WHERE id IN
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>